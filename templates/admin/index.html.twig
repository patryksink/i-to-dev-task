{% extends 'base.html.twig' %}

{% block body %}
    <div>
        <div class="d-flex mb-3">
            <h1>User list:</h1>
            <div class="align-self-center ms-auto">
                <a href="{{ path('admin_user_add') }}" class="btn btn-primary">Create</a>
            </div>
        </div>
        {% if users is not empty %}
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">name</th>
                        <th scope="col">email</th>
                        <th colspan="2" scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for user in users %}
                        <tr>
                            <th scope="row">{{ user.id }}</th>
                            <th>{{ user.name }}</th>
                            <th>{{ user.email }}</th>
                            <th><a href="{{ path('admin_user_edit', { id: user.id }) }}" class="btn btn-success">Edit</a></th>
                            <th><a href="{{ path('admin_user_delete', { id: user.id }) }}" class="btn btn-danger">Delete</a></th>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% else %}
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">There is no users created yet</h5>
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}
