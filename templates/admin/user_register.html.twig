{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% if form_errors(registrationForm) %}
        <div class="alert alert-danger">{{form_errors(registrationForm)}}</div>
    {% endif %}
    {{ form_start(registrationForm) }}
        <div class="row">
            <div class="w-50 mx-auto">
                <h1 class="h3 mb-3 font-weight-normal">Register</h1>
                {% if not is_form_valid %}
                    <div class="alert alert-danger">
                        {{form_errors(registrationForm.name)}}
                        {{form_errors(registrationForm.email)}}
                        {{form_errors(registrationForm.plainPassword.first)}}
                    </div>
                {% endif %}
                <div class="mb-3">
                    {{ form_label(registrationForm.name, 'Name', {'label_attr': {'class': 'mb-2'}}) }}
                    {{ form_widget(registrationForm.name, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="mb-3">
                    {{ form_label(registrationForm.email, 'Email', {'label_attr': {'class': 'mb-2'}}) }}
                    {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="mb-3">
                    {{ form_label(registrationForm.plainPassword.first, 'Password', {'label_attr': {'class': 'mb-2'}}) }}
                    {{ form_widget(registrationForm.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="mb-3">
                    {{ form_label(registrationForm.plainPassword.second, 'Repeat password', {'label_attr': {'class': 'mb-2'}}) }}
                    {{ form_widget(registrationForm.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
                </div>
                <button type="submit" class="btn btn-primary">Register</button>
            </div>
        </div>
    {{ form_end(registrationForm) }}
{% endblock %}
